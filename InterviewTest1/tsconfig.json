{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "lib": ["es2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,  /* 啟用對裝飾器元數據的發射支援 */
    "experimentalDecorators": true  /* 啟用實驗性裝飾器語法 */
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}